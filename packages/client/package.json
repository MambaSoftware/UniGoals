{
  "name": "unigoals",
  "version": "0.3.0",
  "author": "MambaSoftware",
  "description":
    "UniGoals is modern day University course unit tracking utility designed to allow you to be able to constantly know where you currently stand on your course.",
  "scripts": {
    "build:hot":
      "webpack-dashboard -- webpack-dev-server --content-base ./public -d --hot --history-api-fallback true --config ./webpack.config.development.js",
    "build:dev": "webpack -d --progress --watch --config ./webpack.config.development.js",
    "build": "npm run lint && webpack -p --progress --config ./webpack.config.production.js",
    "lint": "eslint -c ./.eslintrc.js --ext .js,.jsx --ignore-path ../../.gitignore .",
    "lint:fix": "eslint -c ./.eslintrc.js --ext .js,.jsx --ignore-path ../../.gitignore . --fix",
    "deploy": "npm run build && firebase deploy"
  },
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "firebase": "^4.7.0",
    "firebase-bolt": "^0.8.2",
    "history": "^4.7.2",
    "lodash": "^4.17.4",
    "material-ui": "^1.0.0-beta.33",
    "material-ui-icons": "^1.0.0-beta.17",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-hash-link": "^1.1.1",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-sort-requires": "^2.1.0",
    "webpack": "^3.9.1",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-server": "^2.9.5"
  }
}
